      <li><%= link_to I18n.t('main.about.link'), about_index_path, :id => 'about_link', :class => class_for_page_name(controller, 'about') %></li>
    </ul>
  </div>
  <div id="content">
    <div id="column1">
      <div class="sidebaritem">
          <h1><%= I18n.t('side.group.title') %></h1>

          <p><%= link_to I18n.t('side.photographers.link'), root_path, :id => 'photographers_link' %></p>
      </div>

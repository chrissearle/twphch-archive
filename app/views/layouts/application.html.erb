    </div>
    <div id="column2">
      <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title), :id => 'content_title' if show_title? %>
      <div id="page_content">
        <%= yield %>
      </div>
    </div>
  </div>
  <div id="footer"><a href="http://www.dcarter.co.uk">design by dcarter</a>
  </div>
</div>
</body>
</html>
